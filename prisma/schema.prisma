datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id              String  @id @default(cuid())
  username        String @unique
  firstName       String?
  lastName        String?
  image           String
  password        String 
  score           Int     @default(0)
  isActive        Boolean @default(true)
  isAdmin         Boolean @default(false)
  isSuperAdmin    Boolean @default(false)
  //Question[]
  //Answer[]
  //Comment[]
}
